<h1><%= @restaurant.name %></h1>

<h4><%= @restaurant.category %></h4>
<h4><%= @restaurant.address %></h4>
<h4><%= @restaurant.phone_number %></h4>

<%= link_to "All Restaurants", restaurants_path %>
<p><%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Review this restaurant", new_restaurant_review_path(@restaurant) %></p>
<br>
<br>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> <%= review.rating %></li>
  <% end %>
</ul>
